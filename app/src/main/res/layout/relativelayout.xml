<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:textAlignment="center"
    android:weightSum="100"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1D1D1D"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="240dp"
            android:paddingRight="20dp"
            android:textAlignment="center">

            <!--Google Sign In Button-->
            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#FFFEFE"
                android:bottomRightRadius="50dp"
                android:drawableStart="@drawable/google_icon"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="Sign In With Your Google Accont"
                android:textAlignment="textStart"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!--Email Field-->
            <TextView
                android:id="@+id/txt_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#A8A8A8"
                android:drawableStart="@drawable/email_"
                android:padding="16dp"
                android:layout_below="@id/btn_1"
                />

            <!--Password-->
            <TextView
                android:id="@+id/txt_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#A8A8A8"
                android:drawableStart="@drawable/lock_"
                android:drawableEnd="@drawable/eye_"
                android:padding="16dp"
                android:layout_below="@id/txt_1"
                />


            <!--Log in Button-->
            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#69BE44"
                android:padding="18dp"
                android:text="LOGIN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/txt_2"
            />

            <!--or Forget Password-->
            <TextView
                android:id="@+id/txt_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/password"
                android:textAlignment="center"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/btn_2"
                />

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_below="@id/txt_3"
                >

                <!--don't have an account yet?-->
                <TextView
                    android:id="@+id/txt_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="don't have an account yet? "
                    android:textColor="#A8A8A8"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <!--Sign Up-->
                <TextView
                    android:id="@+id/txt_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Sign Up"
                    android:textColor="#507BAA"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Skip-->
            <TextView
                android:id="@+id/txt_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Skip"
                android:textAlignment="center"
                android:textColor="#A8A8A8"
                android:textSize="22sp"
                android:layout_below="@id/lin1"/>

        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>